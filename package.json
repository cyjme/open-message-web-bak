{
  "name": "front",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "install": "./bin/npm-install",
    "test": "npm run test:js",
    "test:js": "jest --config=jest.config.json",
    "test:js:watch": "onchange './code/dev/front/js/**/*.js' -- jest --config=jest.config.json -o",
    "build": "npm run clear && npm run build:config && npm run build:css",
    "build:config": "./bin/gap buildConfig",
    "build:css": "./bin/build-css",
    "build:js": "./bin/build-js",
    "release": "npm run clear && npm run release:config && npm run release:css && npm run release:js",
    "release:config": "./bin/gap buildConfig",
    "release:css": "./bin/build-css --source-map=false --output-style=compressed",
    "release:js": "./bin/build-js --source-map=false --minimize=true",
    "watch": "npm run watch:config & npm run watch:css",
    "watch:config": "onchange './code/dev/app/**/*.php' './code/dev/core/**/*.php' './code/dev/lib/**/*.php' -- npm run build:config",
    "watch:css": "onchange './code/dev/front/**/*.scss' './code/dev/app/**/*.scss' -- npm run build:css",
    "watch:html": "onchange './code/dev/front/html/**/*.pug' -- npm run build:html",
    "watch:js": "onchange './code/dev/front/**/*.js' './code/dev/core/**/*.js' './code/dev/app/**/*.js' -- npm run build:js",
    "clear": "./bin/clear",
    "lint": "npm run phpcs && npm run phpmd && npm run eslint && npm run sass-lint",
    "phpcs": "./code/vendor/bin/phpcs --report=full --standard=psr2 --extensions=php code/dev/",
    "phpmd": "./code/vendor/bin/phpmd code/dev/ text cleancode,codesize,controversial,design,naming,unusedcode",
    "eslint": "eslint .",
    "sass-lint": "sass-lint -v --max-warnings=0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "animate.css": "^3.5.2",
    "async-foreach": "^0.1.3",
    "babel-eslint": "^7.2.3",
    "chalk": "^1.1.3",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.0",
    "eslint-plugin-import": "^2.3.0",
    "foundation-sites": "^6.3.0",
    "git-validate": "^2.2.2",
    "glob": "^7.1.1",
    "gutil": "^1.6.4",
    "jest": "^18.1.0",
    "jest-cli": "^18.1.0",
    "meow": "^3.7.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.2.0",
    "onchange": "^3.2.0",
    "pathinfo": "^0.1.0",
    "sass-lint": "^1.10.2",
    "style-loader": "^0.13.1",
    "uglify-es-webpack-plugin": "0.0.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.5"
  },
  "pre-push": [
  ],
  "false": {},
  "dependencies": {}
}
